<view class="profile-container">
  <view class="user-info">
    <view class="avatar-container">
      <image class="avatar" src="{{userInfo.avatar || '../../images/default-avatar.svg'}}"></image>
      <image class="edit-icon" src="../../images/camera-icon.svg"></image>
      <button class="avatar-button" open-type="chooseAvatar" bindchooseavatar="onChooseAvatar">
        选择头像
      </button>
    </view>
    <view class="nickname-container">
      <input class="nickname-input" type="nickname" placeholder="请输入昵称" value="{{userInfo.nickname || ''}}" bindnicknamereview="onNicknameChange" />
    </view>
    <view class="points-container">
      <text class="points-label">我的积分:</text>
      <text class="points">{{userInfo.points || 0}}</text>
    </view>
  </view>
  
  <view class="menu-list">
    <view class="menu-item" bindtap="showMyTreasures">
      <text class="menu-icon">🏆</text>
      <text class="menu-text">我的收藏</text>
      <text class="menu-arrow">></text>
    </view>
    
    <view class="menu-item" bindtap="showRanking">
      <text class="menu-icon">🏅</text>
      <text class="menu-text">排行榜</text>
      <text class="menu-arrow">></text>
    </view>
    
    <view class="menu-item" bindtap="showAbout">
      <text class="menu-icon">ℹ️</text>
      <text class="menu-text">关于我们</text>
      <text class="menu-arrow">></text>
    </view>
  </view>
</view> 