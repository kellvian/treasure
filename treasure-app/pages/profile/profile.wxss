.profile-container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  background-color: #FF9800;
  border-radius: 10rpx;
  color: white;
  margin-bottom: 30rpx;
}

.avatar-container {
  position: relative;
  margin-bottom: 20rpx;
  width: 150rpx;
  height: 150rpx;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
  background-color: #f5f5f5;
}

.edit-icon {
  position: absolute;
  bottom: 5rpx;
  right: 5rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  z-index: 5;
}

.avatar-button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 75rpx;
  opacity: 0;
  z-index: 10;
  padding: 0;
  margin: 0;
}

.nickname-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.nickname-input {
  font-size: 36rpx;
  color: white;
  font-weight: bold;
  text-align: center;
  background: none;
  border: none;
  border-bottom: 1rpx dashed rgba(255, 255, 255, 0.3);
  margin-bottom: 8rpx;
  padding: 4rpx 0;
  width: 300rpx;
}

.nickname-button {
  font-size: 24rpx;
  background-color: rgba(0, 0, 0, 0.2);
  margin-top: 8rpx;
  padding: 6rpx 12rpx;
  line-height: 1.5;
  border-radius: 6rpx;
  color: rgba(255, 255, 255, 0.8);
  min-height: auto;
}

.nickname-button::after {
  border: none;
}

.points-container {
  display: flex;
  align-items: center;
}

.points-label {
  font-size: 28rpx;
  margin-right: 10rpx;
}

.points {
  font-size: 32rpx;
  font-weight: bold;
}

.menu-list {
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.menu-arrow {
  color: #ccc;
  font-size: 32rpx;
} 