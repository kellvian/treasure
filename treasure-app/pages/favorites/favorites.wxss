.favorites-container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header {
  text-align: center;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
  color: #999;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #FF9800;
  border-radius: 50%;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 500rpx;
  color: #999;
  text-align: center;
}

.empty-icon {
  width: 128rpx;
  height: 128rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.tip-action {
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav-btn {
  margin-top: 20rpx;
  background-color: #FF9800;
  color: white;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
}

.favorites-list {
  padding-bottom: 30rpx;
}

.favorite-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.favorite-content {
  display: flex;
  margin-bottom: 20rpx;
}

.favorite-info {
  flex: 1;
}

.favorite-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.favorite-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 15rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.favorite-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.favorite-points {
  color: #FF9800;
  font-weight: bold;
}

.favorite-actions {
  display: flex;
  justify-content: space-between;
}

.action-btn {
  flex: 1;
  font-size: 26rpx;
  padding: 12rpx 0;
  border-radius: 8rpx;
  text-align: center;
  margin: 0 10rpx;
}

.action-btn.view {
  background-color: #f0f0f0;
  color: #666;
}

.action-btn.remove {
  background-color: #FF5722;
  color: white;
} 