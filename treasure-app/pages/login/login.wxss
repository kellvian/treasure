.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  height: 100vh;
  background-color: #f5f5f5;
  justify-content: flex-start;
  padding-top: 100rpx;
}

.logo-container {
  margin-bottom: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
}

.title {
  margin-top: 20rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #FF9800;
}

.description {
  text-align: center;
  font-size: 30rpx;
  color: #666;
  margin-bottom: 50rpx;
  padding: 0 40rpx;
}

.form-container {
  width: 100%;
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.input-container {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.input {
  border-bottom: 1px solid #ddd;
  padding: 20rpx 0;
  font-size: 32rpx;
}

.login-btn {
  background-color: #FF9800;
  color: white;
  border-radius: 10rpx;
  margin-top: 40rpx;
}

.register-link {
  text-align: center;
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #666;
}

.link {
  color: #FF9800;
  margin-left: 10rpx;
}

.wechat-login {
  width: 80%;
}

.wechat-btn {
  background-color: #1AAD19;
  color: white;
  border-radius: 50rpx;
  font-size: 34rpx;
  padding: 16rpx 0;
} 